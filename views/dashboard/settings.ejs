<!DOCTYPE html>
<!--suppress HtmlFormInputWithoutLabel -->
<html lang="en">
<head>
    <title>Settings - Ghosler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: serif;
            background-color: #f4f4f4
        }

        .cardview, .message {
            padding: 20px;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 2px 3px rgba(0, 0, 0, .1);
            border-radius: 10px;
            max-width: 50%;
            text-align: left;
        }

        .message {
            padding: 18px;
            box-shadow: none;
            font-weight: 600;
        }

        button {
            padding: 12px 25px;
            border: none;
            margin-left: 0;
            margin-bottom: 20px;
            border-radius: 12px;
            background-color: #1b2d48;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .header {
            padding: 20px;
            text-align: left;
            font-size: 1.25rem;
            background-color: #1b2d48;
            color: #fff;
            font-weight: 500
        }

        h3 {
            margin: 0 0 1em;
            color: #1b2d48;
            font-weight: 700;
        }

        p {
            line-height: 1.6;
            color: #555;
        }

        input:not([type="submit"]), textarea {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;

            color: #888888;
            font-family: serif;
            font-size: 16px;
            text-align: left;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            display: block;
        }

        .submit-button {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .submit-button:hover {
            background-color: #45a049;
        }

        .form-group-row {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .form-group-row input[type="checkbox"] {
            order: 1;
        }

        .form-group-row label {
            margin-left: 10px;
            order: 2;
        }

        input[type="checkbox"] {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-color: #fff;
            border: 1px solid #cacece;
            border-radius: 4px;
            width: 20px;
            height: 20px;
            cursor: pointer;
            position: relative;
        }

        input[type="checkbox"]:checked {
            background-color: #4CAF50;
            border-color: #4CAF50;
        }

        input[type="checkbox"]:checked:after {
            content: 'âœ“';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            font-size: 14px;
        }

        textarea[name="newsletter.footer_content"] {
            min-height: 150px;
            font-family: 'Courier New', monospace;
            background-color: #f3f3f3;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 10px;
            overflow-x: auto;
            line-height: 1.75;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        input::placeholder, textarea::placeholder {
            color: #888;
            font-family: serif;
            font-style: italic;
            font-size: 0.9em;
        }

        .card-header {
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .arrow {
            border: solid black;
            border-width: 0 2px 2px 0;
            display: inline-block;
            padding: 3px;
            transition: transform .2s;
            margin: 0 0 1em;
        }

        .down {
            transform: rotate(45deg);
            -webkit-transform: rotate(45deg);
        }

        .message-success {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .message-error {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        @media screen and (max-width: 480px) {
            .cardview, .message {
                max-width: 80%;
            }

            h3, p {
                font-size: 1rem;
            }
        }
    </style>

    <script>
        function integrationIdFromAdminKey(secondID) {
            const lastTwo = secondID.slice(-2);
            const shiftedValue = parseInt(lastTwo, 16) - 3 /* shift value of 3 */;
            const shiftedHex = shiftedValue.toString(16).padStart(2, '0');
            return secondID.slice(0, -2) + shiftedHex;
        }

        function generateRandomString(length = 100) {
            let result = '';
            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';

            for (let i = 0; i < length; i++) {
                result += characters.charAt(Math.floor(Math.random() * characters.length));
            }

            document.getElementById('ghost.secret').value = result;
        }


        function toggleCard(header, contentId) {
            const content = document.getElementById(contentId);
            if (content.style.display === 'none') {
                content.style.display = 'block';
            } else content.style.display = 'none';
        }

        let mailConfigIndex = "<%- configs.mail.length; %>";

        function addMailConfig() {
            const mailConfigsDiv = document.getElementById('emailConfigsContainer');
            const newConfigDiv = document.createElement('div');
            newConfigDiv.className = 'email-config';
            newConfigDiv.id = 'mailConfig' + mailConfigIndex;
            newConfigDiv.innerHTML = `
        <div class="card-header" onclick="toggleCard(this, 'mailConfigInner${mailConfigIndex}')">
            <h4>Email Configuration ${parseInt(mailConfigIndex) + 1}</h4>
            <i class="arrow down"></i>
        </div>

        <div id="mailConfigInner${mailConfigIndex}" style="display: none;">
            <div class="form-group">
                <label>Reply To</label>
                <input type="email" placeholder="'Author' <author@ghost.org> [Optional]" name="email[${mailConfigIndex}][reply_to]" />
            </div>
            <div class="form-group">
                <label>From</label>
                <input type="text" placeholder="'Author' <author@ghost.org>" name="email[${mailConfigIndex}][from]" />
            </div>
            <div class="form-group">
                <label>Host</label>
                <input type="text" placeholder="smtp.blog.com"" name="email[${mailConfigIndex}][host]" />
            </div>
            <div class="form-group">
                <label>Port</label>
                <input type="number" placeholder="587" name="email[${mailConfigIndex}][port]" />
            </div>
            <div class="form-group">
                <label>Auth User</label>
                <input type="text" placeholder="Email Username" name="email[${mailConfigIndex}][auth_user]" />
            </div>
            <div class="form-group">
                <label>Auth Password</label>
                <input type="password" placeholder="Email Password" name="email[${mailConfigIndex}][auth_pass]" />
            </div>

            <button type="button" onclick="removeMailConfig(${mailConfigIndex})"
                    class="submit-button" style="background-color: red">
                Remove
            </button>
        </div>
    `;
            mailConfigsDiv.appendChild(newConfigDiv);
            mailConfigIndex = parseInt(mailConfigIndex) + 1;
        }

        function removeMailConfig(index) {
            const configToRemove = document.getElementById('mailConfig' + index);
            configToRemove.parentNode.removeChild(configToRemove);
            mailConfigIndex--;
        }

        window.onload = function () {
            const cardContents = document.querySelectorAll('.cardview > div:not(.card-header)');
            cardContents.forEach((content) => content.style.display = 'none');

            const integrationElement = document.getElementById('integration');
            const splitKey = '<%= configs.ghost.key.split(':')[0]; %>';
            const integrationId = integrationIdFromAdminKey(splitKey);
            integrationElement.href = '<%= configs.ghost.url; %>/ghost/#/settings/integrations/' + integrationId;
        };
    </script>
</head>
<body>

<div class="header">Settings - <a href="/" style="text-decoration: none; color: white">Ghosler</a></div>

<% if (!configs) { %>
    <h3 style="text-align: center; color: #666; margin: 25px;">Unable to load settings.</h3>
<% } else { %>

    <% if ((typeof message !== 'undefined' && message && message.toString().length > 0)) { %>
        <div class="message <% if (level === 'success') { %> message-success <% } else { %> message-error <% } %>">
            <%- message; %>
        </div>
    <% } %>

    <form action="/settings" method="post">

        <!-- Profile -->
        <%- include('../partials/settings/profile.ejs') %>

        <!-- Ghost -->
        <%- include('../partials/settings/ghost.ejs') %>

        <!-- Customise -->
        <%- include('../partials/settings/customise.ejs') %>

        <!-- Mails -->
        <%- include('../partials/settings/mail.ejs') %>

        <div style="text-align: center; max-width: 50%; margin: auto;">
            <input type="submit" value="Save Changes" class="submit-button">
        </div>
    </form>
<% } %>

</body>
</html>